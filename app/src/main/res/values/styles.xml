<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthenticationSkillTitles">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/greyscale_13</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="fontface">montserrat_light</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    
    <style name="AuthenticationDayTitles">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/greyscale_13</item>
        <item name="fontface">montserrat_light</item>
    </style>

    <declare-styleable name="ColorImageView">
        <attr name="customColor" format="color"/>
    </declare-styleable>

    <style name="CircleButton">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="YellowCircleButton" parent="CircleButton"><!-- ImageView -->
        <item name="android:src">@drawable/ic_add_black_48dp</item>
        <item name="android:background">@drawable/dashed_circle_yellow</item>
        <item name="customColor">@color/flatui_yellow_1</item>
    </style>

    <style name="YellowCircleButton.Large" parent="YellowCircleButton">
        <item name="android:layout_width">@dimen/main_circle_size</item>
        <item name="android:layout_height">@dimen/main_circle_size</item>
        <item name="android:padding">@dimen/main_circle_padding</item>
        <item name="android:background">@drawable/large_dashed_circle_yellow</item>
    </style>

    <style name="GreyCircleButton" parent="CircleButton"><!-- TextView -->
        <item name="android:background">@drawable/stroked_circle_grey</item>
        <item name="android:textColor">@color/circle_grey</item>
        <item name="fontface">montserrat_bold</item>
        <item name="android:text">-</item>
    </style>

    <style name="GreyCircleButton.Large" parent="GreyCircleButton">
        <item name="android:layout_width">@dimen/main_circle_size</item>
        <item name="android:layout_height">@dimen/main_circle_size</item>
        <item name="android:background">@drawable/large_stroked_circle_grey</item>
        <item name="fontface">montserrat_extrabold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RedCircleButton" parent="CircleButton"><!-- TextView -->
        <item name="android:text">X</item>
        <item name="android:textColor">@color/circle_red</item>
        <item name="fontface">montserrat_light</item>
        <item name="android:background">@drawable/stroked_circle_red</item>
    </style>

    <style name="RedCircleButton.Large" parent="RedCircleButton">
        <item name="android:layout_width">@dimen/main_circle_size</item>
        <item name="android:layout_height">@dimen/main_circle_size</item>
        <item name="android:background">@drawable/large_stroked_circle_red</item>
        <item name="fontface">montserrat_regular</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BlueCircleButton" parent="CircleButton"><!-- TextView -->
        <item name="android:textColor">@color/circle_blue</item>
        <item name="android:background">@drawable/stroked_circle_blue</item>
    </style>

    <style name="BlueCircleButton.Large" parent="BlueCircleButton">
        <item name="android:layout_width">@dimen/main_circle_size</item>
        <item name="android:layout_height">@dimen/main_circle_size</item>
        <item name="android:background">@drawable/large_stroked_circle_blue</item>
        <item name="android:padding">@dimen/main_circle_padding</item>
        <item name="fontface">montserrat_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="GreenCircleButton" parent="CircleButton"><!-- ImageView -->
        <item name="android:textColor">@color/circle_green</item>
        <item name="android:background">@drawable/stroked_circle_green</item>
        <item name="android:src">@drawable/ic_check_black_48dp</item>
    </style>

    <style name="GreenCircleButton.Large" parent="GreenCircleButton">
        <item name="android:layout_width">@dimen/main_circle_size</item>
        <item name="android:layout_height">@dimen/main_circle_size</item>
        <item name="android:background">@drawable/large_stroked_circle_green</item>
        <item name="android:padding">@dimen/main_circle_padding</item>
        <item name="customColor">@color/circle_green</item>
    </style>



</resources>
