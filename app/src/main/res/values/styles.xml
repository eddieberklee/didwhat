<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthenticationSkillTitles">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/greyscale_13</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="fontface">montserrat_light</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="AuthenticationDayTitles">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/greyscale_13</item>
        <item name="fontface">montserrat_light</item>
    </style>

    <style name="YellowCircleButton">
        <item name="android:src">@drawable/ic_add_black_48dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/dashed_circle_yellow</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- For TextView -->
    <style name="GreyCircleButton" parent="YellowCircleButton">
        <item name="android:background">@drawable/stroked_circle_grey</item>
        <item name="fontface">montserrat_bold</item>
        <item name="android:textColor">@color/flatui_grey_1</item>
        <item name="android:text">-</item>
    </style>

    <!-- For TextView -->
    <style name="RedCircleButton" parent="YellowCircleButton">
        <item name="android:text">X</item>
        <item name="android:textColor">@color/flatui_red_1</item>
        <item name="fontface">montserrat_light</item>
        <item name="android:background">@drawable/stroked_circle_red</item>
    </style>

    <!-- For TextView -->
    <style name="BlueCircleButton" parent="YellowCircleButton">
        <item name="android:textColor">@color/flatui_blue_1</item>
        <item name="android:background">@drawable/stroked_circle_blue</item>
    </style>

    <!-- For ImageView -->
    <style name="GreenCircleButton" parent="YellowCircleButton">
        <item name="android:textColor">@color/flatui_green_1</item>
        <item name="android:background">@drawable/stroked_circle_green</item>
        <item name="android:src">@drawable/ic_check_black_48dp</item>
    </style>



</resources>
