<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.compscieddy.didwhat.AuthenticationActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <com.compscieddy.didwhat.EddieTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo"/>
        <com.compscieddy.didwhat.EddieEditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontface="montserrat_light"
            android:hint="enter email..."/>
        <com.compscieddy.didwhat.EddieEditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontface="montserrat_light"
            android:hint="enter password..."/>
        <Button
            android:id="@+id/authentication_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login/Signup"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <com.compscieddy.didwhat.EddieTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/flatui_yellow_1"
            app:fontface="montserrat_light"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:text="Complete 1 Thing for each skill you have."/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.compscieddy.didwhat.EddieTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontface="montserrat_light"
                android:text="Ex."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- LOL to the layout nesting - please TODO -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.compscieddy.didwhat.EddieTextView
                        style="@style/AuthenticationSkillTitles"
                        android:text="Reading"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.compscieddy.didwhat.EddieTextView
                        style="@style/AuthenticationSkillTitles"
                        android:text="Programming"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.compscieddy.didwhat.EddieTextView
                        style="@style/AuthenticationSkillTitles"
                        android:text="Gym"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                    <ImageView
                        style="@style/AuthenticationDashedCircles"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.compscieddy.didwhat.EddieTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/flatui_yellow_1"
            app:fontface="montserrat_semibold"
            android:text="DidWhat"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>
